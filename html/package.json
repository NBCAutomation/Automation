{
	"name": "OTS-Spire",
	"author": "Deltrie Allen",
	"email": "deltrie.allen@nbcuni.com",
	"version": "3.0.0",
	"scripts": {
		"runall": "npm run 5concurrent && npm run 5concurrent-nav && npm run 5concurrent-article && npm run sendAlert",
		"runall-async": "npm run 1process && npm run 1process-nav && npm run 1process-article && npm run sendAlert",
		"runall-local": "npm run local-manifest && npm run local-nav && npm run local-article",
		"runall-regression": "npm run regressionAlertStart && npm run stageRegression && npm run prodRegression && npm run regressionAlertEnd",
		"runall-regressionLocal": "npm run regressionAlertStart && npm run prodRegressionLocal && npm run regressionAlertEnd",
		"runall-hourly": "npm run hourly_manifestCheck && npm run hourly_navCheck && npm run hourly_contentCheck && npm run sendAlert",
		"5concurrent": "cat sites.txt | xargs -P5 -I{} casperjs test \"./tests/apiTest_manifest.js\" --url=\"{}\"",
		"1process": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_manifest.js\" --url=\"{}\"",
		"5concurrent-nav": "cat sites.txt | xargs -P5 -I{} casperjs test \"./tests/apiTest_nav.js\" --url=\"{}\"",
		"1process-nav": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_nav.js\" --url=\"{}\"",
		"5concurrent-article": "cat sites.txt | xargs -P5 -I{} casperjs test \"./tests/apiTest_content.js\" --url=\"{}\"",
		"1process-article": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_content.js\" --url=\"{}\"",
		"create-dictionaries": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_manifest.js\" --url=\"{}\" --task=createDictionary",
		"stageRegression": "cat stage_sites.txt | xargs -P1 -I{} casperjs test \"./tests/regressionTest.js\" --url=\"{}\"",
		"prodRegression": "./prodRegression.sh",
		"hourly_manifestCheck": "shuf -n 3 sites.txt | xargs -P3 -I{} casperjs test \"./tests/apiTest_manifest.js\" --url=\"{}\"",
		"hourly_navCheck": "shuf -n 3 sites.txt | xargs -P3 -I{} casperjs test \"./tests/apiTest_nav.js\" --url=\"{}\"",
		"hourly_contentCheck": "shuf -n 3 sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_content.js\" --url=\"{}\"",
		"local-manifest": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_manifest.js\" --url=\"{}\" --env=local --cron",
		"local-nav": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_nav.js\" --url=\"{}\" --output=console --env=local",
		"local-article": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_content.js\" --output=console --url=\"{}\" --env=local",
		"local-create-dictionaries": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/apiTest_manifest.js\" --env=local --url=\"{}\" --task=createDictionary",
		"stageRegressionLocal": "cat stage_sites.txt | xargs -P1 -I{} casperjs test \"./tests/regressionTest.js\" --env=local --url=\"{}\"",
		"prodRegressionLocal": "cat sites.txt | xargs -P1 -I{} casperjs test \"./tests/regressionTest.js\" --env=local --url=\"{}\"",
		"regressionAlertStart": "casperjs test \"./utils/tasker.js\" --task=send_alert --taskType=regression-notification --taskRef=start --logNote=casperTask",
		"regressionAlertEnd": "casperjs test \"./utils/tasker.js\" --task=send_alert --taskType=regression-notification --taskRef=end --logNote=casperTask",
		"sendAlert": "casperjs test \"./utils/tasker.js\" --task=send_alert --taskType=api-notification --taskRef=complete --logNote=casperTask"
	},
	"dependencies": {
	    "casperjs": "^1.1.4-2",
	    "phantomjs": "^2.1.7",
	    "slimerjs": "^0.10.3",
	    "shelljs": "^0.8.1"
	}
}
